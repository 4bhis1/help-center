---
import { FAQ_DATA, getPopularFAQs } from '../data/constants';
---

<aside class="faq-sidebar">
	<div class="faq-container">
		<div class="faq-header">
			<h3 class="faq-title">Frequently Asked Questions</h3>
			<div class="faq-tabs">
				<button class="faq-tab active" data-faq-filter="popular">Popular</button>
				<button class="faq-tab" data-faq-filter="all">All FAQs</button>
			</div>
		</div>
		
		<div class="faq-search">
			<div class="faq-search-box">
				<svg class="faq-search-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
				<input 
					type="text" 
					placeholder="Search FAQs..."
					class="faq-search-input" 
					id="faq-search" 
				/>
			</div>
		</div>

		<div class="faq-list" id="faq-list">
			{getPopularFAQs().map((faq) => (
				<div class="faq-item" data-faq-id={faq.id} data-faq-category={faq.category}>
					<button class="faq-question" data-faq-toggle>
						<span class="faq-question-text">{faq.question}</span>
						<svg class="faq-chevron" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</button>
					<div class="faq-answer">
						<p>{faq.answer}</p>
					</div>
				</div>
			))}
		</div>

		<div class="faq-footer">
			<div class="faq-help">
				<p class="faq-help-text">Still need help?</p>
				<button class="faq-contact-btn" id="faq-contact">Contact Support</button>
			</div>
		</div>
	</div>
</aside>

<style>
	.faq-sidebar {
		position: sticky;
		top: 80px;
		height: fit-content;
		max-height: calc(100vh - 100px);
		overflow-y: auto;
		background: white;
		border: 1px solid #e6e6e6;
		border-radius: 8px;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
	}

	.faq-container {
		padding: 24px;
	}

	.faq-header {
		margin-bottom: 20px;
	}

	.faq-title {
		font-size: 18px;
		font-weight: 600;
		color: #333;
		margin-bottom: 16px;
	}

	.faq-tabs {
		display: flex;
		gap: 8px;
		background: #f8f9fa;
		border-radius: 6px;
		padding: 4px;
	}

	.faq-tab {
		background: none;
		border: none;
		padding: 8px 16px;
		border-radius: 4px;
		font-size: 13px;
		color: #666;
		cursor: pointer;
		transition: all 0.2s ease;
		flex: 1;
		text-align: center;
	}

	.faq-tab.active,
	.faq-tab:hover {
		background: #387ed1;
		color: white;
	}

	.faq-search {
		margin-bottom: 20px;
	}

	.faq-search-box {
		position: relative;
		display: flex;
		align-items: center;
	}

	.faq-search-icon {
		position: absolute;
		left: 12px;
		color: #999;
		z-index: 1;
	}

	.faq-search-input {
		width: 100%;
		border: 1px solid #ddd;
		border-radius: 6px;
		padding: 10px 12px 10px 36px;
		font-size: 14px;
		color: #333;
		outline: none;
		transition: border-color 0.2s ease;
	}

	.faq-search-input:focus {
		border-color: #387ed1;
	}

	.faq-search-input::placeholder {
		color: #999;
	}

	.faq-list {
		display: flex;
		flex-direction: column;
		gap: 8px;
		margin-bottom: 20px;
		max-height: 400px;
		overflow-y: auto;
	}

	.faq-item {
		border: 1px solid #e6e6e6;
		border-radius: 6px;
		overflow: hidden;
		transition: all 0.2s ease;
	}

	.faq-item:hover {
		border-color: #387ed1;
	}

	.faq-item.active {
		border-color: #387ed1;
		box-shadow: 0 2px 8px rgba(56, 126, 209, 0.1);
	}

	.faq-question {
		width: 100%;
		background: none;
		border: none;
		padding: 16px;
		text-align: left;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 12px;
		transition: background 0.2s ease;
	}

	.faq-question:hover {
		background: #f8f9fa;
	}

	.faq-question-text {
		font-size: 14px;
		font-weight: 500;
		color: #333;
		line-height: 1.4;
	}

	.faq-chevron {
		color: #666;
		transition: transform 0.2s ease;
		flex-shrink: 0;
	}

	.faq-item.active .faq-chevron {
		transform: rotate(180deg);
	}

	.faq-answer {
		max-height: 0;
		overflow: hidden;
		transition: max-height 0.3s ease, padding 0.3s ease;
		background: #f8f9fa;
	}

	.faq-item.active .faq-answer {
		max-height: 200px;
		padding: 16px;
	}

	.faq-answer p {
		font-size: 13px;
		color: #666;
		line-height: 1.5;
		margin: 0;
	}

	.faq-footer {
		border-top: 1px solid #e6e6e6;
		padding-top: 20px;
	}

	.faq-help {
		text-align: center;
	}

	.faq-help-text {
		font-size: 13px;
		color: #666;
		margin-bottom: 12px;
	}

	.faq-contact-btn {
		background: #387ed1;
		color: white;
		border: none;
		padding: 10px 20px;
		border-radius: 6px;
		font-size: 13px;
		font-weight: 500;
		cursor: pointer;
		transition: all 0.2s ease;
		width: 100%;
	}

	.faq-contact-btn:hover {
		background: #2c6bb8;
		transform: translateY(-1px);
	}

	/* Custom scrollbar for FAQ list */
	.faq-list::-webkit-scrollbar {
		width: 4px;
	}

	.faq-list::-webkit-scrollbar-track {
		background: #f1f1f1;
		border-radius: 2px;
	}

	.faq-list::-webkit-scrollbar-thumb {
		background: #ccc;
		border-radius: 2px;
	}

	.faq-list::-webkit-scrollbar-thumb:hover {
		background: #999;
	}

	/* Responsive adjustments */
	@media (max-width: 1024px) {
		.faq-sidebar {
			position: static;
			max-height: none;
			margin-top: 32px;
		}
	}

	@media (max-width: 768px) {
		.faq-container {
			padding: 20px;
		}

		.faq-title {
			font-size: 16px;
		}

		.faq-list {
			max-height: 300px;
		}
	}
</style>