---
import { HELP_DATA, formatViews } from '../data/constants';
---

<section class="popular-articles">
	<div class="container">
		<div class="section-header">
			<h2 class="section-title">Popular articles</h2>
			<div class="filter-tabs">
				<button class="filter-tab active" data-category="all">All</button>
				<button class="filter-tab" data-category="account">Account</button>
				<button class="filter-tab" data-category="trading">Trading</button>
				<button class="filter-tab" data-category="funds">Funds</button>
			</div>
		</div>
		<div class="articles-list" id="articles-list">
			{HELP_DATA.popularArticles.map((article, index) => (
				<a href={`#article-${article.id}`} class="article-item" data-category={article.categoryId}>
					<div class="article-content">
						<h3 class="article-title">{article.title}</h3>
						<div class="article-meta">
							<span class="article-category">{article.category}</span>
							<span class="article-views">{formatViews(article.views)} views</span>
							<span class="article-read-time">{article.readTime} read</span>
						</div>
					</div>
					<div class="article-arrow">
						<svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M9 18l6-6-6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
				</a>
			))}
		</div>
		<div class="load-more-container">
			<button class="load-more-btn" id="load-more-articles">Load more articles</button>
		</div>
	</div>
</section>

<style>
	.popular-articles {
		padding: 48px 0;
		background: #f8f9fa;
		border-top: 1px solid #e6e6e6;
	}

	.section-header {
		margin-bottom: 32px;
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 16px;
	}

	.section-title {
		font-size: 20px;
		font-weight: 500;
		color: #333;
		margin: 0;
	}

	.filter-tabs {
		display: flex;
		gap: 8px;
		background: white;
		border-radius: 6px;
		padding: 4px;
		border: 1px solid #e6e6e6;
	}

	.filter-tab {
		background: none;
		border: none;
		padding: 8px 16px;
		border-radius: 4px;
		font-size: 14px;
		color: #666;
		cursor: pointer;
		transition: all 0.2s ease;
	}

	.filter-tab.active,
	.filter-tab:hover {
		background: #387ed1;
		color: white;
	}

	.articles-list {
		display: flex;
		flex-direction: column;
		gap: 1px;
		background: #e6e6e6;
		border-radius: 4px;
		overflow: hidden;
		transition: all 0.3s ease;
	}

	.articles-list.filtering {
		opacity: 0.7;
		transform: translateY(10px);
	}

	.article-item {
		background: white;
		padding: 20px 24px;
		text-decoration: none;
		color: inherit;
		transition: all 0.2s ease;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 16px;
		opacity: 1;
		transform: translateY(0);
		transition: all 0.3s ease;
	}

	.article-item.hidden {
		display: none;
	}

	.article-item.fade-in {
		animation: fadeInUp 0.4s ease forwards;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.article-item:hover {
		background: #f8f9fa;
	}

	.article-item:hover .article-arrow {
		transform: translateX(4px);
		color: #387ed1;
	}

	.article-content {
		flex: 1;
	}

	.article-title {
		font-size: 16px;
		font-weight: 400;
		color: #333;
		margin-bottom: 8px;
		line-height: 1.4;
	}

	.article-meta {
		display: flex;
		align-items: center;
		gap: 16px;
		font-size: 12px;
		color: #666;
	}

	.article-category {
		background: #e6f3ff;
		color: #387ed1;
		padding: 2px 8px;
		border-radius: 12px;
		font-weight: 500;
	}

	.article-views,
	.article-read-time {
		color: #999;
	}

	.article-arrow {
		color: #ccc;
		transition: all 0.2s ease;
		flex-shrink: 0;
	}

	.load-more-container {
		text-align: center;
		margin-top: 32px;
	}

	.load-more-btn {
		background: white;
		border: 1px solid #ddd;
		color: #666;
		padding: 12px 24px;
		border-radius: 4px;
		font-size: 14px;
		cursor: pointer;
		transition: all 0.2s ease;
	}

	.load-more-btn:hover {
		border-color: #387ed1;
		color: #387ed1;
	}

	@media (max-width: 768px) {
		.popular-articles {
			padding: 32px 0;
		}

		.article-item {
			padding: 16px 20px;
		}

		.article-meta {
			flex-direction: column;
			align-items: flex-start;
			gap: 8px;
		}

		.section-header {
			flex-direction: column;
			align-items: flex-start;
		}

		.filter-tabs {
			width: 100%;
			justify-content: center;
		}
	}
</style>