---
import { HELP_DATA } from '../data/constants';
---

<section class="quick-actions">
	<div class="container">
		<div class="quick-actions-grid">
			{HELP_DATA.quickLinks.map((link) => (
				<div class="quick-action-card" data-action={link.action}>
					<div class="action-icon">
						<span>{link.icon}</span>
					</div>
					<div class="action-content">
						<h3 class="action-title">{link.title}</h3>
						<p class="action-description">{link.description}</p>
					</div>
					<div class="action-arrow">
						<svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M9 18l6-6-6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.quick-actions {
		padding: 48px 0;
		background: white;
		border-top: 1px solid #e6e6e6;
	}

	.quick-actions-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 16px;
	}

	.quick-action-card {
		background: white;
		border: 1px solid #e6e6e6;
		border-radius: 4px;
		padding: 24px;
		cursor: pointer;
		transition: all 0.2s ease;
		display: flex;
		align-items: center;
		gap: 16px;
	}

	.quick-action-card:hover {
		border-color: #387ed1;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}

	.quick-action-card:hover .action-arrow {
		transform: translateX(4px);
		color: #387ed1;
	}

	.action-icon {
		width: 48px;
		height: 48px;
		border-radius: 50%;
		background: #f8f9fa;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 24px;
		flex-shrink: 0;
	}

	.action-content {
		flex: 1;
	}

	.action-title {
		font-size: 16px;
		font-weight: 500;
		color: #333;
		margin-bottom: 4px;
	}

	.action-description {
		color: #666;
		font-size: 14px;
		line-height: 1.4;
		margin: 0;
	}

	.action-arrow {
		color: #ccc;
		transition: all 0.2s ease;
		flex-shrink: 0;
	}

	@media (max-width: 768px) {
		.quick-actions {
			padding: 32px 0;
		}

		.quick-actions-grid {
			grid-template-columns: 1fr;
		}

		.quick-action-card {
			padding: 20px;
		}
	}
</style>